#########################################################################
# Variables
#########################################################################
CC=g++
CFLAGS=-std=c++11 -Wall -w
SOURCE:=$(wildcard src/*.cpp)
TARGET=hello

#########################################################################
# Target
#########################################################################
all: $(TARGET)

#########################################################################
# Action
#########################################################################
$(TARGET):
	$(CC) $(CFLAGS) $(SOURCE) -o $(TARGET)

#########################################################################
# Remove
#########################################################################
clean:
	rm -rf $(TARGET)
